.container
  .row
    .col-sm-12

      %h3 Message Boards

      .message-board
        %h3
          New Topic in
          = @forum.category.name

        .spacer-sm
        
        = simple_form_for @topic, :url => forum_create_path do |f|
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'

          .form-group
            = f.label :post
            = f.simple_fields_for :posts do |post|
              = render :partial => "mongoid_forums/posts/form", :locals => { :f => post }

          .form-group
            = f.submit "Create Topic", :class => "btn btn-success", :disable_with => "Creating..."
